<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shp_gradient_bg"
    tools:context=".AddInfoContextActivity"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:weightSum="1">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sent"
        android:id="@+id/btn_sentencing"
        android:background="@drawable/btn_red"
        android:layout_gravity="bottom"
        android:textColor="@color/White"
        android:layout_below="@+id/tv_add_context_title"
        android:layout_toRightOf="@+id/et_info_context"
        android:layout_toEndOf="@+id/et_info_context"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:background="@drawable/shp_message"
        android:id="@+id/et_info_context"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btn_named_entity"
        android:layout_toStartOf="@+id/btn_named_entity"
        android:layout_below="@+id/tv_add_context_title"
        android:layout_above="@+id/btn_use_this_context" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_add_context_title"
        android:text="Information context"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tokenize"
        android:layout_marginTop="5dp"
        android:id="@+id/btn_tokenize"
        android:textColor="@color/White"
        android:background="@drawable/btn_blue"
        android:layout_below="@+id/btn_sentencing"
        android:layout_toRightOf="@+id/et_info_context"
        android:layout_toEndOf="@+id/et_info_context" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tagger"
        android:layout_marginTop="5dp"
        android:id="@+id/btn_tagger"
        android:textColor="@color/White"
        android:background="@drawable/btn_purple"
        android:layout_below="@+id/btn_tokenize"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Named"
        android:layout_marginTop="5dp"
        android:id="@+id/btn_named_entity"
        android:textColor="@color/White"
        android:background="@drawable/btn_yellow"
        android:layout_below="@+id/btn_tagger"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use this context!"
        android:id="@+id/btn_use_this_context"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_green"
        android:textColor="@color/White"
        android:layout_alignRight="@+id/btn_named_entity"
        android:layout_alignEnd="@+id/btn_named_entity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
